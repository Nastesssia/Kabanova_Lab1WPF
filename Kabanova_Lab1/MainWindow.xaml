<Window x:Class="Kabanova_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kabanova_Lab1"
        mc:Ignorable="d"
        Title="Лабораторная №1" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" Background="Transparent">
            <Label Content="Введите количество минут" Background="Beige" FontStyle="Italic"/>
            <TextBox x:Name="MinText" Background="Bisque"></TextBox>
            <Label Content="Введите количество секунд" Background="Beige" FontStyle="Italic"/>
            <TextBox x:Name="SecText" Background="Bisque"></TextBox>
            <Button Content="Вычислить общее количество секунд" Margin="10" Background="Wheat" Click="Button_Click"/>
            <TextBlock x:Name="Result" Background="Bisque"></TextBlock>
        </StackPanel>

    </Grid>
</Window>
